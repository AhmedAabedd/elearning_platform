<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Inherit the course form view to add price field -->
    <record id="view_slide_channel_form_inherit" model="ir.ui.view">
        <field name="name">slide.channel.form.inherit</field>
        <field name="model">slide.channel</field>
        <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='channel_type']" position="after">
                <field name="is_featured"/>
            </xpath>
            
            <xpath expr="//field[@name='description']" position="after">
                <label for="featured_description">Description</label>
                <field name="featured_description" placeholder="This description will appear in the featured courses cards of the home page..."/>
            </xpath>

        </field>
    </record>

</odoo>