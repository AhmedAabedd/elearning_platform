<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="slide_channel_graph_view" model="ir.ui.view">
        <field name="name">slide.channel.graph.view</field>
        <field name="model">slide.channel</field>
        <field name="arch" type="xml">
            <graph string="Courses Revenue">
                <field name="name"/>
                <field name="sales_total"/>
                <field name="sales_count" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_slide_channel" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">slide.channel</field>
        <field name="view_mode">graph</field>
    </record>

    <menuitem
        id="menu_sales_revenues"
        name="Revenues"
        parent="website_slides.website_slides_menu_report"
        action="action_slide_channel"
        sequence="9"/>

</odoo>
