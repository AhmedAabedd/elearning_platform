<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Display job description and dynamic skills after the job title section -->
    <template id="dynamic_job_skills" inherit_id="website_hr_recruitment.detail">
        <xpath expr="//section[@class='pb32']//div[@class='container']" position="after">
            <div class="container">
                
                <!-- First Row: Job Description and Job Details Sidebar -->
                <div class="row">
                    <!-- Main Content Column -->
                    <div class="col-lg-8">
                        <!-- Job Description Section -->
                        <section class="job-description-section pt32 pb32">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h3>Job Description</h3>
                                    <div t-field="job.description" t-options="{'widget': 'html'}" class="lead mt-3"/>
                                </div>
                            </div>
                        </section>
                    </div>

                    <!-- Sidebar Column with Job Details -->
                    <div class="col-lg-4">
                        <!-- Job Details Sidebar -->
                        <section class="job-details-sidebar pt32">
                            <div class="card shadow-sm border-0 sticky-top" style="top: 100px;">
                                <div class="card-header bg-white text-dark">
                                    <h5 class="mb-0">
                                        <i class="fa fa-info-circle me-2"></i>Job Details
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <!-- Contract Type -->
                                    <div class="detail-item mb-4">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="fa fa-briefcase text-primary me-3 fa-lg"></i>
                                            <div>
                                                <small class="text-muted d-block">Contract Type</small>
                                                <strong>
                                                    <t t-if="job.contract_type_id">
                                                        <span t-field="job.contract_type_id"/>
                                                    </t>
                                                    <t t-else="">Not specified</t>
                                                </strong>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Open Positions -->
                                    <div class="detail-item mb-4">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="fa fa-users text-primary me-3 fa-lg"></i>
                                            <div>
                                                <small class="text-muted d-block">Open Positions</small>
                                                <strong>
                                                    <t t-if="job.no_of_recruitment and job.no_of_recruitment > 0">
                                                        <span t-field="job.no_of_recruitment"/>
                                                        <t t-if="job.no_of_recruitment == 1">position</t>
                                                        <t t-else="">positions</t>
                                                    </t>
                                                    <t t-else="">Not specified</t>
                                                </strong>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Department -->
                                    <div class="detail-item">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="fa fa-sitemap text-primary me-3 fa-lg"></i>
                                            <div>
                                                <small class="text-muted d-block">Department</small>
                                                <strong>
                                                    <t t-if="job.department_id">
                                                        <span t-field="job.department_id"/>
                                                    </t>
                                                    <t t-else="">Not specified</t>
                                                </strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>

                <!-- Second Row: Required Skills (Full Width) -->
                <div class="row">
                    <div class="col-lg-12">
                        <!-- Skills Section -->
                        <section class="skills-section pt32 pb32">
                            <div class="row">
                                <div class="col-lg-12">
                                    
                                    <!-- Display skills if they exist -->
                                    <t t-if="job.skill_ids">
                                        <h3>Required Skills</h3>
                                        <div class="row mt-4">
                                            <t t-foreach="job.skill_ids" t-as="skill">
                                                <div class="col-md-4 col-sm-6 mb-3">
                                                    <div class="card h-100 border-0 shadow-sm">
                                                        <div class="card-body text-center">
                                                            <i class="fa fa-check-circle text-success fa-2x mb-2"></i>
                                                            <h5 t-field="skill.name" class="card-title"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </div>
                                    </t>
                                    
                                    <!-- Fallback if no skills are defined -->
                                    <t t-else="">
                                        <div class="alert alert-info">
                                            <h4>Position Requirements</h4>
                                            <div class="row mt-3">
                                                <div class="col-md-6">
                                                    <div class="d-flex align-items-center mb-2">
                                                        <i class="fa fa-check text-success me-2"></i>
                                                        <span>Strong communication skills</span>
                                                    </div>
                                                    <div class="d-flex align-items-center mb-2">
                                                        <i class="fa fa-check text-success me-2"></i>
                                                        <span>Problem-solving ability</span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="d-flex align-items-center mb-2">
                                                        <i class="fa fa-check text-success me-2"></i>
                                                        <span>Team collaboration</span>
                                                    </div>
                                                    <div class="d-flex align-items-center mb-2">
                                                        <i class="fa fa-check text-success me-2"></i>
                                                        <span>Technical proficiency</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                    
                                </div>
                            </div>
                        </section>
                    </div>
                </div>

            </div>
        </xpath>
    </template>

</odoo>