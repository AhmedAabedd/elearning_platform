<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Display job description and dynamic skills after the job title section -->
    <template id="dynamic_job_skills" inherit_id="website_hr_recruitment.detail">
        <xpath expr="//section[@class='pb32']//div[@class='container']" position="after">
            <div class="container">
                
                <!-- Job Description Section -->
                <section class="job-description-section pt32 pb32">
                    <div class="row">
                        <div class="col-lg-12">
                            <h3>Job Description</h3>
                            <div t-field="job.description" t-options="{'widget': 'html'}" class="lead mt-3"/>
                        </div>
                    </div>
                </section>

                <!-- Skills Section -->
                <section class="skills-section pt32 pb32">
                    <div class="row">
                        <div class="col-lg-12">
                            
                            <!-- Display skills if they exist -->
                            <t t-if="job.skill_ids">
                                <h3>Required Skills</h3>
                                <div class="row mt-4">
                                    <t t-foreach="job.skill_ids" t-as="skill">
                                        <div class="col-md-4 col-sm-6 mb-3">
                                            <div class="card h-100 border-0 shadow-sm">
                                                <div class="card-body text-center">
                                                    <i class="fa fa-check-circle text-success fa-2x mb-2"></i>
                                                    <h5 t-field="skill.name" class="card-title"/>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </t>
                            
                            <!-- Fallback if no skills are defined -->
                            <t t-else="">
                                <div class="alert alert-info">
                                    <h4>Position Requirements</h4>
                                    <div class="row mt-3">
                                        <div class="col-md-6">
                                            <div class="d-flex align-items-center mb-2">
                                                <i class="fa fa-check text-success me-2"></i>
                                                <span>Strong communication skills</span>
                                            </div>
                                            <div class="d-flex align-items-center mb-2">
                                                <i class="fa fa-check text-success me-2"></i>
                                                <span>Problem-solving ability</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="d-flex align-items-center mb-2">
                                                <i class="fa fa-check text-success me-2"></i>
                                                <span>Team collaboration</span>
                                            </div>
                                            <div class="d-flex align-items-center mb-2">
                                                <i class="fa fa-check text-success me-2"></i>
                                                <span>Technical proficiency</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                            
                        </div>
                    </div>
                </section>

            </div>
        </xpath>
    </template>

</odoo>